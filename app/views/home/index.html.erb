<section class="home">
    <% @posts.each do |post| %>
        <article class="home__article">
            <%= image_tag post.image, class: 'home__article__img' %>
            <h3><%= post.title %></h3>
            <p><%= post.body %></p>
            <% if current_user&.id == post.user_id %>
                <%= link_to  "Update", edit_post_path(post) %>
                <%= link_to  "Delete", post_path(post), method: :delete %>
            <% end %>
        </article>
    <% end %>
</section>
