<% @posts.each do |post| %>
    <div>
        <%= image_tag  post.image %>
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>

        <%= link_to  "Update", edit_home_path(post) %>
        <%= link_to  "Delete", home_path(post), method: :delete %>
    </div>
<% end %>

